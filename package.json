{
  "name": "monster-mirror",
  "version": "1.0.1",
  "private": true,
  "scripts": {
    "prepare": "panda codegen && husky install",
    "build:svg": "tsx scripts/svg-sprite.ts",
    "dev": "rm -rf .next && next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "ci:eslint": "eslint --cache --cache-location node_modules/.cache/eslint-cache .",
    "ci:tsc": "tsc --noEmit",
    "release": "release-it --no-git.requireUpstream --only-version"
  },
  "dependencies": {
    "@ark-ui/react": "^1.2.1",
    "@ducanh2912/next-pwa": "^10.0.0",
    "auto-text-size": "^0.2.2",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.299.0",
    "million": "^2.6.4",
    "next": "14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@pandacss/dev": "0.22.1",
    "@park-ui/panda-preset": "0.27.0",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^8.0.1",
    "@types/glob": "^8.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/svg-sprite": "^0.0.38",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "prettier": "^3.1.1",
    "release-it": "^17.0.1",
    "svg-sprite": "^2.0.2",
    "tsx": "^4.7.0",
    "typescript": "5.3.3"
  },
  "overrides": {
    "svgo": "3.1.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "commitArgs": [
        "--no-verify"
      ]
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "public/manifest.json"
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Various"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    },
    "npm": {
      "publish": false
    }
  }
}

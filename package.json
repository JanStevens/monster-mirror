{
  "name": "monster-mirror",
  "version": "1.11.3",
  "private": true,
  "scripts": {
    "prepare": "panda codegen && husky",
    "build:svg": "tsx scripts/svg-sprite.ts",
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "ci:eslint": "eslint --cache --cache-location node_modules/.cache/eslint-cache .",
    "ci:tsc": "react-router typegen && tsc --noEmit",
    "release": "release-it --no-git.requireUpstream --only-version",
    "postinstall": "patch-package"
  },
  "type": "module",
  "dependencies": {
    "@ark-ui/react": "4.1.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@fontsource/philosopher": "^5.1.0",
    "@liveblocks/client": "^2.14.0",
    "@liveblocks/node": "^2.14.0",
    "@liveblocks/zustand": "^2.14.0",
    "@react-router/cloudflare": "^7.0.2",
    "@react-router/node": "^7.0.2",
    "@react-router/serve": "^7.0.2",
    "auto-text-size": "^0.2.3",
    "immer": "^10.1.1",
    "isbot": "^5.1.17",
    "jose": "^5.9.6",
    "lucide-react": "^0.468.0",
    "patch-package": "^8.0.0",
    "react-router": "^7.0.2",
    "sharp": "^0.33.5",
    "slugify": "^1.6.6",
    "use-deep-compare-effect": "^1.8.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@hiogawa/vite-node-miniflare": "^0.1.1",
    "@pandacss/dev": "0.46.1",
    "@pandacss/eslint-plugin": "^0.2.0",
    "@park-ui/panda-preset": "0.42.0",
    "@react-router/dev": "^7.0.2",
    "@release-it/bumper": "^6.0.1",
    "@release-it/conventional-changelog": "^9.0.3",
    "@types/glob": "^8.1.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@types/svg-sprite": "^0.0.39",
    "@typescript-eslint/eslint-plugin": "8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "glob": "^11.0.0",
    "husky": "^9.1.7",
    "postcss": "8.4.47",
    "prettier": "^3.4.2",
    "release-it": "^17.10.0",
    "svg-sprite": "^2.0.4",
    "tsx": "^4.19.2",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.17.0",
    "vite": "^5.4.11",
    "vite-plugin-pwa": "^0.21.1",
    "vite-tsconfig-paths": "^5.1.3"
  },
  "overrides": {
    "svgo": "3.3.2"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "commitArgs": [
        "--no-verify"
      ]
    },
    "github": {
      "release": true,
      "autoGenerate": true,
      "tokenRef": "GITHUB_TOKEN"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "public/manifest.json"
        ]
      },
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "chore",
              "section": "Various"
            }
          ]
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    },
    "npm": {
      "publish": false
    }
  }
}
